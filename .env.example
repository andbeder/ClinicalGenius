# Clinical Genius Configuration

# User Identity (REQUIRED for HIPAA audit logging)
SFDC_USERNAME=your-email@example.com

# Salesforce Configuration
SFDC_CLIENT_ID=your-salesforce-client-id
SFDC_LOGIN_URL=https://login.salesforce.com
KEY_PASS=your-key-passphrase

# Database Encryption (Disable for Windows SQLCipher issues)
DB_ENCRYPTION=false

# HTTPS Configuration (Set to false if having connection issues)
USE_HTTPS=false

# Application Port
PORT=4000

# LLM Configuration
LLM_PROVIDER=lm_studio
LM_STUDIO_ENDPOINT=http://localhost:1234
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# Microsoft Copilot (if using)
# COPILOT_API_KEY=your-copilot-key
# COPILOT_ENDPOINT=https://your-endpoint

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
FLASK_DEBUG=False
